<Window x:Class="pz_012.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:pz_012"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>


        <StackPanel Margin="15" Background="AliceBlue" VerticalAlignment="Center">
            <TextBox x:Name="tbId" Margin="15" FontSize="22"/>
            <TextBox x:Name="tbName" Margin="15" FontSize="22"/>
            <TextBox x:Name="tbDescription" Margin="15" FontSize="22"/>
            <Button x:Name="btnExit" Content="GO!" Margin="50 5 50 5"  FontSize="32" Click="btnExit_Click"/>
            <TextBox x:Name="tbSearch" Margin="3" FontSize="6"/>
            <Button x:Name="btnUn" Content="—" Margin="50 5 50 5" FontSize="8" Click="btnUn_Click"/>
        </StackPanel>
        <ListBox AllowDrop="True" x:Name="lbDesir" Grid.Column="1" Margin="10" Background="Cornsilk" Foreground="DarkSlateGray" FontSize="22" Drop="lbDesir_Drop" DragOver="lbDesir_DragOver" DragEnter="lbDesir_DragEnter" GiveFeedback="lbDesir_GiveFeedback"/>


    </Grid>
</Window>
